enum Permission {
  ADMIN
  USER
}

enum NotificationType {
  FRIEND_INVITE
}

type User {
  id: ID! @unique
  facebookId: String @unique
  name: String @unique
  email: String! @unique
  password: String
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Friendship {
  id: ID! @unique
  user: User! @relation(name: "User")
  friend: User! @relation(name: "Friend")
  inviting: User! @relation(name: "UserInviting")
  accepted: Boolean! @default(value: "false")
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Notification {
  id: ID! @unique
  user: User!
  type: NotificationType!
  friendship: [Friendship!] @relation(name: "FriendshipsConnection")
  createdAt: DateTime!
  updatedAt: DateTime!
  viewed: Boolean! @default(value: "false")
  done: Boolean! @default(value: "false")
}
