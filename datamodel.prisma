enum Permission {
  ADMIN
  USER
}

type User {
  id: ID! @unique
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission]
  jwt: String
  friends: [Friend!]!
}

type Friend {
  id: ID! @unique
  friend: User
  accepted: Boolean! @default(value: "false")
}
